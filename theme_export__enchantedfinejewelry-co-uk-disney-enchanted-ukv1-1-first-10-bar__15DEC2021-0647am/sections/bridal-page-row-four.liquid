<section class="page__content" data-section-type="bridal__page" data-section-id="{{ section.id }}">
  {% assign content-img1 = section.settings.content-img1 %}
  {% assign content-img2 = section.settings.content-img2 %}
  {% assign content-img3 = section.settings.content-img3 %}
  {% assign heading = section.settings.heading %}
  {% assign sub-heading = section.settings.sub-heading %}
  {% assign paragraph = section.settings.paragraph %}
  {% assign button-label = section.settings.button-label %}
  {% assign button-url = section.settings.button-url %}
  
  <div class="flex_container direction_rev">
    <div class="split_img">
      {% if content-img1 != nil %}
      <div class="with_shadow">
        <img class="lazyload" data-src="{{ content-img1 | img_url: 'master' }}" alt="Enchanted Disney" data-sizes="auto" />
      </div>
      {% endif %}
      {% if content-img3 != nil %}
      <div class="absolute_img">
        <img class="lazyload" data-src="{{ content-img3 | img_url: 'master' }}" alt="Enchanted Disney" data-sizes="auto" />
      </div>
      {% endif %}
    </div>
    {% if content-img2 != nil %}
    <div class="split_img">
      <img class="lazyload" data-src="{{ content-img2 | img_url: 'master' }}" alt="Enchanted Disney" data-sizes="auto" />
    </div>
    {% endif %}
    <div class="rowone_coltwo vertical_centered">
      {% if heading != blank %}
      <h2>{{ heading }}</h2>
      {% endif %}
      {% if sub-heading != blank %}
      <h5>{{ sub-heading }}</h5>
      {% endif %}
      {% if paragraph != blank %}
      <p>{{ paragraph }}</p>
      {% endif %}
      {% if button-label != blank %}
      <a href="{% if button-url != blank %}{{ button-url }}{% endif %}" class="btn">
        {{ button-label }}
      </a>
      {% endif %}
    </div>
  </div>
</section>

{% schema %}
{
  "name": "Content Section",
  "settings": [
  {
    "type": "image_picker",
    "id": "content-img1",
    "label": "Image"
  },
  {
    "type": "image_picker",
    "id": "content-img2",
    "label": "Image"
  },
  {
    "type": "image_picker",
    "id": "content-img3",
    "label": "Image"
  },
  {
    "type": "text",
    "id": "heading",
    "label": "Heading"
  },
  {
    "type": "text",
    "id": "sub-heading",
    "label": "Sub Heading"
  },
  {
    "type": "textarea",
    "id": "paragraph",
    "label": "Paragraph"
  },
  {
    "type": "text",
    "id": "button-label",
    "label": "Button Text",
    "default": "SHOP NOW"
  },
  {
    "type": "url",
    "id": "button-url",
    "label": "Button URL"
  }
  ]
}
{% endschema %}

