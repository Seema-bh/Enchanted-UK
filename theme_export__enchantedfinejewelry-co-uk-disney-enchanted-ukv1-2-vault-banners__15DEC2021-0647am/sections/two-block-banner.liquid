<div class="three-block-banner two-block-images">
    {% assign anniversary = section.settings.image3 | img_url: '1x1' | replace: '_1x1.', '_{width}x.' %}
    {% assign motherDay = section.settings.image1 | img_url: '1x1' | replace: '_1x1.', '_{width}x.' %}
    {% assign pendentDesign = section.settings.image2 | img_url: '1x1' | replace: '_1x1.', '_{width}x.' %}
    <div class="two-block-image image-container">
      <a class="link-wrapper first-img" href="{{ section.settings.link1 }}">
        <img class="grid-view-item__image lazyload first-image"
             alt="Gifting main banner"
             data-src="{{ motherDay }}"
             data-widths="[180, 360, 540, 720, 900, 1080, 1296, 1512, 1728, 2048]"
             data-sizes="auto"
             data-image>
        <img class="grid-view-item__image lazyload first-image float-img"
             alt="Gifting main banner"
             data-src="{{ pendentDesign }}"
             data-widths="[180, 360, 540, 720, 900, 1080, 1296, 1512, 1728, 2048]"
             data-sizes="auto"
             data-image>
        <span class="label">
          {{ section.settings.title1 }} {% include 'right-icon' %}
        </span>
      </a>
    </div>
    <div class="single-block-image image-container">
      <a class="link-wrapper" href="{{ section.settings.link2 }}">
        <img class="grid-view-item__image lazyload first-image"
             alt="Gifting main banner"
             data-src="{{ anniversary }}"
             data-widths="[180, 360, 540, 720, 900, 1080, 1296, 1512, 1728, 2048]"
             data-sizes="auto"
             data-image>
        <span class="label">
         {{ section.settings.title2 }}  {% include 'right-icon' %}
        </span>
      </a>
    </div>
  </div>
{% schema %}
  {
    "name": "Two block banner",
    "settings": [
		{
          "type": "image_picker",
          "id": "image1",
          "label": "Image 1"
        },
		{
          "type": "image_picker",
          "id": "image2",
          "label": "Image 2"
        },
        {
          "type": "text",
          "id": "title1",
          "label": "Title 1"
        },
        {
          "type": "url",
          "id": "link1",
          "label": "Banner Link 1"
        },
		{
          "type": "image_picker",
          "id": "image3",
          "label": "Image 3"
        },
        {
          "type": "text",
          "id": "title2",
          "label": "Title 2"
        },
        {
          "type": "url",
          "id": "link2",
          "label": "Banner Link 2"
        }
	]
  }
{% endschema %}

