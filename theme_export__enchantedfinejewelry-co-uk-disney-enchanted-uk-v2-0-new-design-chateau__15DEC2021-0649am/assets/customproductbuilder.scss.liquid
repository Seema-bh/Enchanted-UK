/* Please use this file to customize the syles of the custom product builder */
.breadcrumb {
  display: none;
}
.cpb-root{
  margin-top:0;
}
h2.cpb-panel-title{
  font-family: "NewYork-Medium";
  font-weight: 400;
  text-transform: initial;
  letter-spacing: 0;
  font-size: 16px !important;
  line-height: 1;
  color: #11214A;
  margin: 5px 0 !important;
  text-transform: uppercase;
}

#product-builder {
  margin: 0 auto;
  width: 90%;
  max-width: 1230px;
}
div#product-builder * {
  font-family: "NewYork-Medium";
}
.cpb-category-title span {
  font-size: 14px;
  text-transform: capitalize !important;
}
#product-builder .cpb-theme-provider.alpine-white .cpb-option.cpb-option-type-img {
  padding: 0;
  border-width: 2px;
  width: 74px;
  height: 90px;
}
#product-builder .cpb-theme-provider.alpine-white .cpb-option.cpb-option-type-img.cpb-active {
  border-color: #11214A;
  position: relative;
}
#product-builder .cpb-theme-provider.alpine-white .cpb-option.cpb-option-type-img {
  margin: 0 2px;
  border: 2px solid #cdcdcd;
  border-radius: 5px;
}
.cpb-product-actions-container {
  width: 100%;
}
[data-intro="Panels List"] {
  display: none;
}
button.cpb-add-to-cart-button {
  width: 100%;
  font-size: 14px !important;
  padding: 8px 20px;
  background: #305c8c;
  border-radius: 4px;
  letter-spacing: 0.5px;
}
#product-builder .lnr {
  display: none;
}
button.cpb-add-to-cart-button.sc-cLQEGU.gVvnLz {
  color: #fff;
  border-radius: 4px;
  background: #305c8c !important;
  text-transform: uppercase;
}
button.cpb-add-to-cart-button span{
  text-transform: uppercase;
}
#product-builder canvas {
  display: inline-block;
  z-index: 0;
}
.cpb-product-price {
  font-family: "NewYork-Bold";
  font-weight: 400;
  font-size: 16px;
  color: #305C8C;
}
#product-builder .cpb-theme-provider.alpine-white .cpb-option.cpb-option-type-img.cpb-active:before {
  content: '';
  position: absolute;
  top: -2px;
  right: -2px;
  border: 2px solid transparent;
  border-width: 1.2em;
  border-right-color: #11214a;
  border-top-color: #11214a;
  z-index: 5;
  border-top-right-radius: 5px;
}
#product-builder .cpb-theme-provider.alpine-white .cpb-option.cpb-option-type-img.cpb-active:after {
  content: '\2713';
  display: inline-block;
  color: #fff;
  padding: 0 6px 0 0;
  position: absolute;
  top: 2px;
  right: -2px;
  z-index: 6;
  font-size: 12px;
  font-weight: 700;
}
.cpb-layout .cpb-preview-container{
  margin: 0 0 0 0;
}

/*========================	
== Custom product builder css ==	
========================*/	
.main-content #product-builder .cpb-layout{
  .cpb-preview-container {
    flex-basis: calc(50% - 40px) !important;
    max-width: calc(50% - 40px) !important;
    .buttonControls {
      margin-top: 20px;
      height: 50px;
    }
    .buttonControlsWrapper{
      width: calc(100%);
    }
    .cpb-preview-sticky {
      position: sticky;
      top: 98px;
    }
    @media (max-width:1024px){
      flex-basis: calc(100%) !important;
      max-width: calc(100%) !important;
      margin-bottom: 150px !important;
    }
  }
  .cpb-panels-container,.cpb-admin-aside {
    flex-basis: 50% !important;
    max-width: 50% !important;
    border: 2px solid #ddd;
    @media (max-width:1024px){
      flex-basis: calc(100%) !important;
      max-width: calc(100%) !important;
    }
  }
  .cpb-panels-tabs{
    padding: 0 40px;
  }
  .cpb-panels-container{
    display: flex;
    flex-direction: column;
    justify-content: flex-end;
    padding-bottom: 50px;
  }
  .cpb-panel-wrapper {
    padding: 0 30px;
  }
  .cpb-product-actions{
    display: flex;
    align-items: center;
    justify-content: space-between;
    margin-top: 0;
    background: linear-gradient(180deg, #f6f7f9 0, #ebedf0);
    padding: 0 10px;
    position: sticky;
    top: 98px;
    z-index: 10;
    margin-bottom: 0;
    order: -1;
    @media (max-width:1024px){
      top: 72px;
    }
  }
  @media (max-width:1024px){
    padding: 0;
  }
  .cpb-category {
    margin: 0;
  }
  .cpb-category-title__inner {
    display: none;
  }
  img{
  	display:block;
  }
  .cpb-option-label{
    display: block !important;
    position: relative;
    visibility: visible;
    margin-top: -1px;
    font-size: 10px;
    text-align: center;
  }
}
