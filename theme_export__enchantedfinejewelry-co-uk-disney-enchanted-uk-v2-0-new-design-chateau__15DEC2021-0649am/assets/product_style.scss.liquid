/* width */
.swatch-view-custom-image::-webkit-scrollbar {
  height:6px;
}

/* Track */
#swatch-option1 .swatch-view-custom-image::-webkit-scrollbar-track {
  box-shadow: inset 0 0 5px #999; 
  border-radius: 5px;
}

/* Handle */
#swatch-option1 .swatch-view-custom-image::-webkit-scrollbar-thumb {
  /*   background:#11214a;  */
  background:#999;
  border-radius: 5px;
}

/* Handle on hover */
#swatch-option1 .swatch-view-custom-image::-webkit-scrollbar-thumb:hover {
  /*   background: #11214a;  */
  background:#999;
  
}


