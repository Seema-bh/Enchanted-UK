// PDP Engraving CSS Start
.ring_size{
  .Img-txt{
    position: relative;
    display:flex;
    align-items:center;
    justify-content:center;
    max-width:390px;
    #toChange{
      font-family: 'dancing_script_otregular';
      position: absolute;
      font-size: 18px;
    }
  }
}


.name_engraving {
  width: 100%;
}


.line_btn {
  display: flex;
  justify-content: stretch;
  margin-top: 6px;
}

.font-family-sec {
  margin-left: 20px;
}

.font-family-sec {
  h4 {
    margin:0px 0px 2px 0;
    font-size:15px;
    text-transform: uppercase;
    color:#305C8C;
    font-weight:bold;
  }
  .font-familt-grid {
    /*     display: flex;
    justify-content: space-between; */
    margin-bottom: 6px;
  }
  .font-family-btn {
    border-radius: 4px;
    margin-left: 5px;
    background: #fff;
    border: 1.5px solid #D8E9FA;
    width: 70px;
    padding: 0px;
    line-height:0px;
    &:first-child{
      margin-left: 0px;
    }
  }

}

.ring_size-selection{
  margin-bottom:0px !important;
}


#embros_txt{
  border: 1px solid #305C8C;
  border-radius:4px;
}

.engraving_title {
  margin: 0;
  font-size: 15px;
  padding-top: 4px;
  font-weight:bold;
  text-transform: uppercase;
  color: #305C8C;
}
.First_line{
  display: block;
  font-size: 15px;
  text-transform: uppercase;
  color: #305C8C;
  margin:0px;
  font-weight:bold;
}



.swatches {

  .swatch-label {
    font-size:15px !important;
    font-weight:bold !important;
  }

}



.swatch-single{position:relative;}
#swatch-option1 .swatch-view-custom-image{
  display: flex;
  overflow-x: scroll;
  width: 490px;

