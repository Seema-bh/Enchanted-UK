<section class="extraordinary-moment page-width" data-section-type="banner-and-text" data-section-id="{{ section.id }}">
  <div class="banner-text-container">
    {% if section.settings.heading != blank %}
    <div class="section_header text-center">
      <h3>{{ section.settings.heading }}</h3>
    </div>
    {% endif %}
    {% assign first_banner = section.settings.first_banner | img_url: '1x1' | replace: '_1x1.', '_{width}x.' %}
    {% assign second_banner = section.settings.second_banner | img_url: '1x1' | replace: '_1x1.', '_{width}x.' %}
    {% assign third_banner = section.settings.third_banner | img_url: '1x1' | replace: '_1x1.', '_{width}x.' %}
    <div class="grid">
      <div class="grid__item medium-up--one-half">
        {% if section.settings.first_banner != blank %}
        <div class="custom__item-inner--image" style="padding-top:{{ 1 | divided_by: section.settings.first_banner.aspect_ratio | times: 100}}%;">
          <img class="custom__image lazyload" data-src="{{ first_banner }}" data-sizes="auto">
        </div>
        {% endif %}
        {% if section.settings.first_banner_text != blank %}
        <p>{{ section.settings.first_banner_text }}</p>
        {% endif %}
      </div>
      <div class="grid__item medium-up--one-half">
        {% if section.settings.second_banner_toptxt != blank %}
        <p class="color__blu">{{ section.settings.second_banner_toptxt }}</p>
        {% endif %}
        {% if section.settings.watch_film_txt != blank %}
        <a href="{{ section.settings.watch_film_link }}" class="btn-border">
          <span class="btn-sparkle"><svg xmlns="http://www.w3.org/2000/svg" width="14" height="14" class="icon-sparkle" viewBox="0 0 14 14"><defs><style>.icon-sparkle-a{fill:#BC913F;}</style></defs><path class="icon-sparkle-a" d="M353.073,355.509a6.979,6.979,0,0,1-7-7,6.978,6.978,0,0,1-7,7,6.978,6.978,0,0,1,7,7A6.979,6.979,0,0,1,353.073,355.509Z" transform="translate(-339.073 -348.509)"></path></svg></span>
          {{ section.settings.watch_film_txt }}
          <span class="btn-sparkle"><svg xmlns="http://www.w3.org/2000/svg" width="14" height="14" class="icon-sparkle" viewBox="0 0 14 14"><defs><style>.icon-sparkle-a{fill:#BC913F;}</style></defs><path class="icon-sparkle-a" d="M353.073,355.509a6.979,6.979,0,0,1-7-7,6.978,6.978,0,0,1-7,7,6.978,6.978,0,0,1,7,7A6.979,6.979,0,0,1,353.073,355.509Z" transform="translate(-339.073 -348.509)"></path></svg></span>
        </a>
        {% endif %}
        {% if section.settings.second_banner != blank %}
        <div class="custom__item-inner--image" style="padding-top:{{ 1 | divided_by: section.settings.second_banner.aspect_ratio | times: 100}}%;">
          <img class="custom__image lazyload" data-src="{{ second_banner }}" data-sizes="auto" >
        </div>
        {% endif %}
        {% if section.settings.second_banner_bottomtxt != blank %}
        <p>{{ section.settings.second_banner_bottomtxt }}</p>
        {% endif %}
        {% if section.settings.shop_txt != blank %}
        <a href="{{ section.settings.shop_link }}">
          <svg xmlns="http://www.w3.org/2000/svg" width="153.229" height="40" viewBox="0 0 153.229 40">
            <g id="Add_to_bag_button" data-name="Add to bag button" transform="translate(16768 -2894.968)">
              <text id="sHOP_ALL" data-name="{{ section.settings.shop_txt }}" transform="translate(-16691.498 2919.969)" fill="#bc913f" font-size="14" font-family="SourceSansPro-Semibold, Source Sans Pro" font-weight="600" letter-spacing="0.15em"><tspan x="-36" y="0">{{ section.settings.shop_txt }}</tspan></text>
              <path id="Path_526" data-name="Path 526" d="M346.663,352.128a4.036,4.036,0,0,1-4.036-4.036,4.036,4.036,0,0,1-4.036,4.036,4.035,4.035,0,0,1,4.036,4.036A4.036,4.036,0,0,1,346.663,352.128Z" transform="translate(-16961.436 2562.84)" fill="#bc913f"/>
              <path id="Path_526-2" data-name="Path 526" d="M346.663,352.128a4.036,4.036,0,0,1-4.036-4.036,4.036,4.036,0,0,1-4.036,4.036,4.035,4.035,0,0,1,4.036,4.036A4.036,4.036,0,0,1,346.663,352.128Z" transform="translate(-17106.592 2562.84)" fill="#bc913f"/>
              <path id="Path_210934" data-name="Path 210934" d="M277.7,536.258H422.309l.6,14.267.6-15.462h-147l.575,15.462Z" transform="translate(-17041.5 2359.905)" fill="#bc913f"/>
              <path id="Path_210935" data-name="Path 210935" d="M422.309,590.392H277.7l-.6-14.267-.6,15.462h147l-.575-15.462Z" transform="translate(-17041.5 2343.38)" fill="#bc913f"/>
            </g>
          </svg>
        </a>
        {% endif %}
      </div>
      <div class="third_grid grid__item medium-up--one-half">
        {% if section.settings.third_banner != blank %}
        <div class="custom__item-inner--image" style="padding-top:{{ 1 | divided_by: section.settings.third_banner.aspect_ratio | times: 100}}%;">
          <img class="custom__image lazyload" data-src="{{ third_banner }}" data-sizes="auto">
        </div>
        {% endif %}
        <div class="product details">
          {% if section.settings.third_banner_title != blank %}
          <h5>{{ section.settings.third_banner_title }}</h5>
          {% endif %}
          {% if section.settings.third_banner_text != blank %}
          <p>{{ section.settings.third_banner_text }}</p>
          {% endif %}
          {% if section.settings.third_banner_link != blank %}
          <a href="{{ section.settings.third_banner_link }}">
            <svg xmlns="http://www.w3.org/2000/svg" width="153.229" height="40" viewBox="0 0 153.229 40">
              <g id="Add_to_bag_button" data-name="Add to bag button" transform="translate(16768 -2894.968)">
                <text id="ADD_TO_BAG" data-name="ADD TO BAG" transform="translate(-16691.498 2919.969)" fill="#bc913f" font-size="14" font-family="SourceSansPro-Semibold, Source Sans Pro" font-weight="600" letter-spacing="0.15em"><tspan x="-45" y="0">ADD TO BAG</tspan></text>
                <path id="Path_526" data-name="Path 526" d="M346.663,352.128a4.036,4.036,0,0,1-4.036-4.036,4.036,4.036,0,0,1-4.036,4.036,4.035,4.035,0,0,1,4.036,4.036A4.036,4.036,0,0,1,346.663,352.128Z" transform="translate(-16961.436 2562.84)" fill="#bc913f"/>
                <path id="Path_526-2" data-name="Path 526" d="M346.663,352.128a4.036,4.036,0,0,1-4.036-4.036,4.036,4.036,0,0,1-4.036,4.036,4.035,4.035,0,0,1,4.036,4.036A4.036,4.036,0,0,1,346.663,352.128Z" transform="translate(-17106.592 2562.84)" fill="#bc913f"/>
                <path id="Path_210934" data-name="Path 210934" d="M277.7,536.258H422.309l.6,14.267.6-15.462h-147l.575,15.462Z" transform="translate(-17041.5 2359.905)" fill="#bc913f"/>
                <path id="Path_210935" data-name="Path 210935" d="M422.309,590.392H277.7l-.6-14.267-.6,15.462h147l-.575-15.462Z" transform="translate(-17041.5 2343.38)" fill="#bc913f"/>
              </g>
            </svg>
          </a>
          {% endif %}
        </div>
      </div>
    </div>
  </div>
</section> 

{% schema %}
{
  "name": "Extra Ordinary Moment",
  "class": "index-section",
  "settings": [
  {
    "type": "text",
    "id": "heading",
    "label": "Section Heading",
    "default": "Dream a little <br><i><b>Extra-Ordinary</b> Moment</i>"
  },
  {
    "type": "image_picker",
    "id": "first_banner",
    "label": "First Image"
  },
  {
    "type": "text",
    "id": "first_banner_text",
    "label": "First Banner text",
    "default": "Inspired by the waterfalls depicted in ukiyo-e landscapes, this brooch Expresses the energy of a water running rapidly with melting snow. The Graceful column of water and the brilliant green of the pine trees capture The ephemeral beauty of the spring season in Japan."
  },
  {
    "type": "text",
    "id": "second_banner_toptxt",
    "label": "Second Banner Top Text",
    "default": "The new collection comes to life in a short film starring Japanese supermodel, Ai Tominaga. She has been one of the first Asian models to walk the runways of Europe, who continues to take on new challenges. Under a canopy of darkness freckled with ethereal lights, she showcases signature pieces from the collection tin inspired by the beautiful scenery and patterns found in Japan."
  },
  {
    "type": "text",
    "id": "watch_film_txt",
    "label": "First Btn text",
    "default": "WATCH THE FILM"
  },
  {
    "type": "url",
    "id": "watch_film_link",
    "label": "First btn link"
  },
  {
    "type": "image_picker",
    "id": "second_banner",
    "label": "Second Image"
  },
  {
    "type": "text",
    "id": "second_banner_bottomtxt",
    "label": "Second banner bottom text",
    "default": "These breathtaking creations are inspired by the stylized wave pattern, seigaiha (blue ocean waves), which had originally been used in China and later introduced to Japan via the Silk Road. The mystical glow of the opals evokes a modern sensuality."
  },
  {
    "type": "text",
    "id": "shop_txt",
    "label": "Second btn text",
    "default": "SHOP ALL"
  },
  {
    "type": "url",
    "id": "shop_link",
    "label": "Second btn Link"
  },
  {
    "type": "image_picker",
    "id": "third_banner",
    "label": "Third Image"
  },
  {
    "type": "text",
    "id": "third_banner_title",
    "label": "Third banner title",
    "default": "Ring"
  },
  {
    "type": "text",
    "id": "third_banner_text",
    "label": "Third Banner Text",
    "default": "Lorem ipsum dolor sit amet, consetetur sadipscing elitr, sed ur sadipscing elitr, sed"
  },
  {
    "type": "url",
    "id": "third_banner_link",
    "label": "Third Banner link"
  }
  ]
}
{% endschema %}