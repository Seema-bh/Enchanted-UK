    },
    {
      "type": "image_picker",
      "id": "mb_image",
      "label": "Princesses Mobile banner "
    },
    {
      "type": "text",
      "id": "sub_title",
      "label": "Subtitle",
      "default": "Subtitle"
    },
    {
      "type": "color",
      "id": "subtitle_color",
      "label": "Subtitle color"
    },
    {
      "type": "text",
      "id": "title",
      "label": "Title",
      "default": "Title"
    },
    {
      "type": "color",
      "id": "title_color",
      "label": "Title color"
    },
    {
      "type": "richtext",
      "id": "text",
      "label": "Text",
      "default": "<p>Add text to give information about your chosen collection.</p>"
    },
    {
      "type": "color",
      "id": "richtext_color",
      "label": "Richtext color"
    },
    {
      "type": "color",
      "id": "title2_color",
      "label": "Title2 color"
    },
    {
      "type": "text",
      "id": "button_label",
      "label": "Button label",
