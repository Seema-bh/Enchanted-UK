{% if section.settings.enable_section %}
<section class="section-spacing section-wrapper">
  <div class="page-width">
    {% if section.settings.header_title != blank %}
    <div class="section-header text-center">
      <h2 class="feature-row-title">{{ section.settings.header_title }}</h2>
      {% if section.settings.header_sub_title != blank %}
      <span class="feature-row-subtitle">{{ section.settings.header_sub_title }}</span>
      {% endif %}
    </div>
    {% endif %}
    <div class="swiper-container pdp-chateaus-slider">
      <div class="grid grid--no-gutters grid--uniform swiper-wrapper text-center">
        {% for block in section.blocks %}
        <div class="swiper-slide grid__item medium-up--one-third">
          <div class="content">
            {% assign image = block.settings.image | img_url: 'master' %}
            <div class="image-wrapper">
              <img class="lazyload"
                   src="{{ image }}"
                   data-src="{{ image }}"
                   data-sizes="auto"
                   alt="" />
            </div>
            <div class="info text-center">
              {% if block.settings.title != blank %}
              <h3>{{ block.settings.title }}</h3>
              {% endif %}
              {% if block.settings.button_text and block.settings.button_url != blank %}
              <a href="{{ block.settings.button_url }}" class="btn-border btn-gold btn-hover-white">
                <span class="btn-sparkle">{% include 'icon-sparkle' %}</span>
                {{ block.settings.button_text }}
                <span class="btn-sparkle">{% include 'icon-sparkle' %}</span>
              </a>
              {% endif %}
            </div>
          </div>
        </div>
        {% endfor %}
      </div>
      <!-- Add navigation buttons -->
      <div class="swiper-button-prev"></div>
      <div class="swiper-button-next"></div>
      <!-- Add scrollbar -->
      <div class="swiper-scrollbar medium-up--hide"></div>
    </div>
  </div>
</section>
{% endif %}

{% schema %}
  {
    "name": "Chateaus",
	"class": "pdp-chateaus",
    "settings": [
      {
        "type": "checkbox",
        "id": "enable_section",
        "label": "Enable section",
        "default": true
      },
      {
        "type": "header",
        "content": "Header"
      },
      {
        "type": "text",
        "id": "header_title",
        "label": "Header Title",
        "default": "Header Title"
      },
      {
        "type": "text",
        "id": "header_sub_title",
        "label": "Header Sub Title",
        "default": "Header Subtitle"
      }
    ],
	"blocks": [
      {
        "type": "column",
        "name": "Column",
        "settings": [
          {
            "type": "image_picker",
            "id": "image",
            "label": "Image"
          },
          {
            "type": "text",
			"id": "title",
            "label": "Title",
            "default": "Title"
          },
          {
            "type": "text",
			"id": "button_text",
            "label": "Button text",
            "default": "Explore"
          },
          {
            "type": "url",
			"id": "button_url",
            "label": "Button url"
          }
		]
      }
	]
  }
{% endschema %}

