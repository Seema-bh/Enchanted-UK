<section class="innerpage__banner" data-section-type="fashion__page--rowtwo" data-section-id="{{ section.id }}" style="padding-top: 0;">
  {% assign banner = section.settings.page-banner %}
  {% assign heading = section.settings.heading %}
  {% assign sub-heading = section.settings.sub-heading %}
  {% assign paragraph = section.settings.paragraph %}
  {% assign button-label = section.settings.button-label %}
  {% assign button-url = section.settings.button-url %}
  
  {% if banner != nil %}
  <div class="banner_container">
    <img class="lazyload" data-src="{{ banner | img_url: 'master' }}" data-sizes="auto" alt="Enchanted Disney" />
    <div class="banner_text">
      {% if heading != blank %}
      <h2>{{ heading }}</h2>
      {% endif %}
      {% if sub-heading != blank %}
      <h5>{{ sub-heading }}</h5>
      {% endif %}
      {% if paragraph != blank %}
      <p>{{ paragraph }}</p>
      {% endif %}
      {% if button-label != blank %}
      <a href="{% if button-url != blank %}{{ button-url }}/{% endif %}" class="btn">
        {{ button-label }}
      </a>
      {% endif %}
    </div>
  </div>
  {% endif %}
</section>

{% schema %}
{
  "name": "Page Content",
  "settings": [
  {
    "type": "image_picker",
    "id": "page-banner",
    "label": "Image"
  },
  {
    "type": "text",
    "id": "heading",
    "label": "Heading"
  },
  {
    "type": "text",
    "id": "sub-heading",
    "label": "Sub Heading"
  },
  {
    "type": "textarea",
    "id": "paragraph",
    "label": "Paragraph"
  },
  {
    "type": "text",
    "id": "button-label",
    "label": "Button Text",
    "default": "SHOP NOW"
  },
  {
    "type": "url",
    "id": "button-url",
    "label": "Button URL"
  }
  ]
}
{% endschema %}