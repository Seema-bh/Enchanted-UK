    position: relative;
    padding-bottom: 56.25%; /* 16:9 */
    height: 0;
  }
  .videoWrapper iframe {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
  }
  .countdown-wrapper h2{
    font-size: 50px;
    font-family: "NewYork-Regular";
    color: #11214A;
    margin-bottom: 0;
    text-transform: none;
  }
  .countdown-wrapper .subtitle {
    font-size: 34px !important;
    margin-top: 10px;
    margin-bottom: 50px;
    line-height: 1 !important;
  }
  .countdown-wrapper h3{
    font-size: 40px;
    font-family: "NewYork-Regular";
    color: #11214A;
  }
  .product-grid-slider .mm-product-image.has-hover-img:hover img.first-image {
    opacity: 1 !important;
  }
  .countdown-wrapper #demo{
    font-size: 60px;
    font-family: "NewYork-Regular";
    color: #11214A;
  }
  .main-content {
    background: #e4e4e4;
  }
  .mid-annual-landiang-page{
  	background:#fff;
    padding: 15px 15px;
  }
  .mid-annual-landiang-page .mid-annual-banner-setion{
   margin-bottom:10px; 
  }
  .mid-annual-landiang-page .mid-annual-banner-setion img{
    width:100%;
    display:block;
  }
  .product-grid-slider .mm-product-title {
    overflow: hidden;
