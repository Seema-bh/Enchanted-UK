<div class="page-width">
  <div class="mid-annual-landiang-page">
    {% section 'mid-annual-banner-section' %}
  </div>
  <div class="banner-and-products-section reverse-mobile">
    <div class="left-content">
      <a href="{{ section.settings.banner_image_link }}">
        <div class="videoWrapper-test">
          <iframe src="https://www.facebook.com/plugins/video.php?href=https%3A%2F%2Fwww.facebook.com%2F1724644634463973%2Fvideos%2F245117470162565%2F&show_text=0&width=267" width="100%" height="700" style="border:none;overflow:hidden" scrolling="no" frameborder="0" allowTransparency="true" allowFullScreen="true"></iframe>
        </div>
      </a>
    </div>
    <div class="right-content">
      <div class="product-grid-slider mid-annual-products-box ">
        {% if section.settings.title != blank %}
        <div class="section-header text-center">
          <h2 class="h3">{{ section.settings.title | escape }}</h2>
        </div>
        {% endif %}
        <ul class="grid grid--uniform mid-annual-grid">
          {% for product in collection.products limit: 4 %}
          <li class="grid__item grid__item--{{section.id}} small--one-half medium-up--one-half mid-annual-grid-item">
            {% include 'product-card-grid', max_height: max_height, product: product, show_vendor: section.settings.show_vendor %}
          </li>
          {% endfor %}
        </ul>
      </div>
    </div>
  </div>
</div>


<style>
