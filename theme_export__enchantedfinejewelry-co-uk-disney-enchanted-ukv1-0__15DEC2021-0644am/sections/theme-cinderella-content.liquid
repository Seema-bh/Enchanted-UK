{% if section.settings.enable_section %}
<section class="theme__content cinderella" data-section-type="theme__content" data-section-id="{{ section.id }}">
  {% assign section-bg = section.settings.bg-img %}
  
  <div class="ed--wrapper">
  {% for block in section.blocks %}
  {% assign content-img = block.settings.content-img %}
  {% assign heading = block.settings.small-heading %}
  {% assign paragraph = block.settings.big-content %}
  <div class="flex__container {% cycle 'direction_rev', 'direction_row' %}{% if forloop.first == true %} content__center{% else %} content__flex--end{% endif %}{% if forloop.index == 2 %} mt-50{% endif %}">
    <div class="theme__content--right">
      {% if heading != blank %}
      <h5>{{ heading }}</h5>
      {% endif %}
      {% if paragraph != blank %}
      <p>{{ paragraph }}</p>
      {% endif %}
    </div>
  </div>
  {% endfor %}
  </div>
</section>

<style>
  {% if section-bg != nil %}
    .theme__content {
      background-image: url('{{ section-bg | img_url: 'master' }}');
    }
  {% endif %}
</style>
{% endif %}
{% schema %}
  {
    "name": "Princess Cinderella",
    "settings": [
	  {
        "type": "checkbox",
        "id": "enable_section",
		"label": "Enable Section"
      },
      {
        "type": "image_picker",
        "id": "bg-img",
        "label": "Background"
      }
	],
	"blocks": [
      {
        "type": "content",
        "name": "Page Content",
        "settings": [
          {
            "type": "image_picker",
            "id": "content-img",
            "label": "Image"
          },
          {
            "type": "textarea",
            "id": "small-heading",
            "label": "Heading"
          },
          {
            "type": "textarea",
            "id": "big-content",
            "label": "Paragraph"
          }
        ]
      }
	]
  }
{% endschema %}

{% stylesheet %}
{% endstylesheet %}

